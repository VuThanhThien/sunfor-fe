{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node", "element-plus/global"],
    "typeRoots": ["./node_modules/@types", "node_modules/@types","node_modules/@element-plus/dist/types"],
    "baseUrl": ".",
    "paths": {
      "core/*": ["src/core/*"],
      "components": ["src/components/index.ts"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "store/*": ["src/store/*"],
      "store": ["src/store/index"],
      "modules/*": ["src/modules/*"],
      "router/*": ["src/router/*"],
      "router": ["src/router/index"],
      "utils/*": ["src/utils/*"],
      "types": ["src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "node_modules/**", "src/**/*.vue.js"]
}
